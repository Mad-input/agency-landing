---

import Navbar from "./Navbar.astro";---

<header>
    <Navbar />
    <div class="content">
        <h1>WE ARE CREATIVES</h1>
        <img class="large-arrow" src="/images/icon-arrow-down.svg" alt="icon"></img>
    </div>
</header>

<style>
    header {
        color: var(--White);
        height: 100vh;
        width: 100%;
        background: url("/images/desktop/image-header.jpg") no-repeat;
        background-size: cover;
        background-position: center center;

        .content {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 90px;
            img {
                width: 30px;
                animation: 1s floating alternate infinite;
            }
        }
    }

    h1 {
        font-family: var(--title);
        font-size: 3.5rem;
        text-align: center;
        letter-spacing: 15px;
        margin-top: 40px;
    }
    
    @keyframes floating {
        0% {
            transform: translateY(0);
        }
        100% {
            transform: translateY(10px);
        }
    }
</style>
